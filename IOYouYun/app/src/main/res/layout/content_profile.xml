<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/color_f5f5f5"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context=".profile.ProfileActivity"
  tools:showIn="@layout/activity_profile">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <LinearLayout
        android:id="@+id/ll_profile_avatar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/avatar"
          android:textColor="@color/color_000000"
          android:textSize="14sp"/>

        <ImageView
          android:id="@+id/iv_profile_avatar"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginRight="10dp"
          android:src="@mipmap/icon"/>

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/more"/>
      </LinearLayout>

      <View style="@style/divider_line"/>

      <LinearLayout
        android:id="@+id/ll_profile_nickname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/nickname"
          android:textColor="@color/color_000000"
          android:textSize="14sp"/>

        <TextView
          android:id="@+id/tv_profile_nickname"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:layout_weight="1"
          android:ellipsize="end"
          android:gravity="right"
          android:maxLines="1"
          android:maxWidth="100dp"
          android:textColor="@color/color_999"
          android:textSize="12sp"/>

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/more"/>
      </LinearLayout>

      <View style="@style/divider_line"/>

      <LinearLayout
        android:id="@+id/ll_profile_gender"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/gender"
          android:textColor="@color/color_000000"
          android:textSize="14sp"/>

        <TextView
          android:id="@+id/tv_profile_gender"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:layout_weight="1"
          android:ellipsize="end"
          android:gravity="right"
          android:maxLines="1"
          android:maxWidth="100dp"
          android:textColor="@color/color_999"
          android:textSize="12sp"/>

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/more"/>
      </LinearLayout>

      <View style="@style/divider_line"/>

      <LinearLayout
        android:id="@+id/ll_profile_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/email"
          android:textColor="@color/color_000000"
          android:textSize="14sp"/>

        <TextView
          android:id="@+id/tv_profile_email"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:layout_weight="1"
          android:ellipsize="end"
          android:gravity="right"
          android:maxLines="1"
          android:maxWidth="100dp"
          android:textColor="@color/color_999"
          android:textSize="12sp"/>

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/more"/>
      </LinearLayout>

      <View style="@style/divider_line"/>

      <LinearLayout
        android:id="@+id/ll_profile_friend_validation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/friend_validation"
          android:textColor="@color/color_000000"
          android:textSize="14sp"/>

        <TextView
          android:id="@+id/tv_profile_friend_validation"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:layout_weight="1"
          android:ellipsize="end"
          android:gravity="right"
          android:maxLines="1"
          android:maxWidth="100dp"
          android:textColor="@color/color_999"
          android:textSize="12sp"/>

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/more"/>
      </LinearLayout>

      <View style="@style/divider_line"/>


      <View style="@style/divider_line"
            android:layout_marginTop="20dp"/>

      <LinearLayout
        android:id="@+id/ll_profile_emotion_mall"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/emotion_mall"
          android:textColor="@color/color_000000"
          android:textSize="14sp"/>

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/more"/>
      </LinearLayout>

      <View style="@style/divider_line"/>

      <TextView
        android:id="@+id/tv_profile_logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_red_selector"
        android:gravity="center"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    </LinearLayout>
  </ScrollView>
</LinearLayout>
