<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".chat.FriendSetActivity"
    tools:showIn="@layout/activity_friend_set">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ll_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/icon" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小玉儿"
                    android:textColor="@color/color_000000" />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/add" />
        </LinearLayout>

        <View style="@style/divider_line" />

        <LinearLayout
            android:id="@+id/ll_msg_not_disturb"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/msg_no_disturb"
                android:textColor="@color/color_000000"
                android:textSize="14sp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sc_disturb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View style="@style/divider_line" />

        <TextView
            android:id="@+id/tv_clear_chat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_white_gray_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/clear_chat_record"
            android:textColor="@color/color_000000"
            android:textSize="16sp" />

        <View style="@style/divider_line" />

        <Button
            android:id="@+id/btn_del_friend"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/tl_intra"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_red_selector"
            android:text="@string/del_friend"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp" />

    </LinearLayout>


</ScrollView>
