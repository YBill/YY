<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".group.activity.GroupSizeActivity"
    tools:showIn="@layout/activity_group_size">


    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/llc_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:divider="@drawable/shape_divider"
        app:showDividers="middle">

        <LinearLayout
            android:id="@+id/ll_50"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_white_gray_selector"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50人" />

            <ImageView
                android:id="@+id/iv_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_icon"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_100"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_white_gray_selector"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100人" />

            <ImageView
                android:id="@+id/iv_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_icon"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_200"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_white_gray_selector"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_200"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="200人" />

            <ImageView
                android:id="@+id/iv_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_icon"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_500"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_white_gray_selector"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_500"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="500人" />

            <ImageView
                android:id="@+id/iv_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_icon"
                android:visibility="gone" />
        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:text="@string/next"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp" />
</LinearLayout>
