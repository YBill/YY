<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="5dip">

    <Button
        android:id="@+id/btn_voip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/voip_btn_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="打电话"
        android:textColor="@color/color_000000"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#DAD9DB" />

    <Button
        android:id="@+id/btn_conference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/conference_btn_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="电话会议"
        android:textColor="@color/color_000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/call_cancel_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="取消"
        android:textColor="@color/color_9b95fb"
        android:textSize="16sp" />

</LinearLayout>