<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="5dip">

    <Button
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/voip_btn_selector"
        android:textColor="@color/color_000000"
        android:textSize="16sp" />

    <View
        android:id="@+id/v_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_dad9de"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/middle_btn_selector"
        android:textColor="@color/color_000000"
        android:textSize="16sp"
        android:visibility="gone" />

    <View
        android:id="@+id/v_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_dad9de"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/middle_btn_selector"
        android:textColor="@color/color_000000"
        android:textSize="16sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_dad9de" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/conference_btn_selector"
        android:textColor="@color/color_000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/call_cancel_selector"
        android:text="@string/string_cancle"
        android:textColor="@color/color_9b95fb"
        android:textSize="16sp" />

</LinearLayout>